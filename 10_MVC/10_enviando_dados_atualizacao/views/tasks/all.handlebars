<h1>Todas as tasks</h1>
<ul class="task-list">
    {{#each tasks}}
        <li>
            <a href="/" class="title">{{this.title}}</a>
            <div class="actions">
                {{#if this.done}}
                    <a href="/tasks/undone/{{this.id}}"><i class="bi bi-check2-all"></i></a>
                {{else}}
                    <a href="/tasks/done/{{this.id}}"><i class="bi bi-check2"></i></a>
                {{/if}}
                <a href="/tasks/edit/{{this.id}}"><i class="bi bi-pencil-square"></i></a>
                <form action="/tasks/remove" method="POST">
                    <input type="hidden" name="id" value="{{this.id}}">
                    <button type="submit">
                        <i class="bi bi-x-lg"></i>
                    </button>
                </form>
            </div>
        </li>
    {{/each}}
</ul>