<h1>Usu√°rios Cadastrados:</h1>
<div class="container">
    {{#each users}}
        <div class="item">
            <h2>{{this.name}}</h2>
            <p>{{this.occupation}}</p>
            <div class="actions">
                <a href="/users/{{this.id}}" class="btn primary-btn">Ver detalhes</a>
                <a href="/users/edit/{{this.id}}" class="btn default-btn">Editar</a>
                <form action="/users/delete/{{this.id}}" method="POST">
                    <input type="submit" value="Excluir" class="btn danger-btn"/>
                </form>
            </div>
        </div>
    {{/each}}
</div>